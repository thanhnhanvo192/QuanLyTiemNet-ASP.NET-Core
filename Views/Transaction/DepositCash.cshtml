@model QuanLyTiemNET.Models.DepositCashViewModel
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}

<h2>Mô phỏng người dùng nạp tiền vào tài khoản</h2>
<img src="~/DepositCash.jpg" asp-append-version="true" alt="Ảnh nạp tiền" height="400px"/>
<form asp-controller="Transaction" asp-action="DepositCash" method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div style="margin: 16px">
        <button type="submit" class="btn btn-primary">Thêm</button>
    </div>
</form>
