@model QuanLyTiemNET.Models.Computer

@{
    ViewData["Title"] = "Chi tiết máy";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.id</dd>

        <dt class="col-sm-2">Tên máy</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Đơn giá</dt>
        <dd class="col-sm-10">@Model.HourlyRate</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>