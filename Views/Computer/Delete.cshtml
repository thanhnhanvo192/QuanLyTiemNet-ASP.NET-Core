@model QuanLyTiemNET.Models.Computer

@{
    ViewData["Title"] = "Xóa máy";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa máy này?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã máy</dt>
        <dd class="col-sm-10">@Model.id</dd>

        <dt class="col-sm-2">Tên máy</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Đơn giá</dt>
        <dd class="col-sm-10">@Model.HourlyRate</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
