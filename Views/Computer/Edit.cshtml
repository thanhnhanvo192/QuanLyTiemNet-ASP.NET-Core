@model QuanLyTiemNET.Models.Computer

@{
    ViewData["Title"] = "Sửa máy tính";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" asp-for="Password" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HourlyRate"></label>
        <input asp-for="HourlyRate" class="form-control" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<ComputerStatus>()">
                <option value="">-- Chọn trạng thái --</option> 
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

